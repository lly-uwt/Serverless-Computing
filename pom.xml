<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.amazonaws.lambda</groupId>
	<artifactId>serverless</artifactId>
	<version>1.0.0</version>
	<packaging>jar</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.6.0</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
					<encoding>UTF-8</encoding>
					<forceJavacCompilerUse>true</forceJavacCompilerUse>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>3.0.0</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.amazonaws</groupId>
				<artifactId>aws-java-sdk-bom</artifactId>
				<version>1.11.313</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<dependencies>

		<dependency>
			<groupId>com.amazonaws</groupId>
			<artifactId>aws-lambda-java-core</artifactId>
			<version>1.1.0</version>
		</dependency>
		<dependency>
			<groupId>lib</groupId>
			<artifactId>janino</artifactId>
			<scope>system</scope>
			<version>0.0</version>
			<systemPath>${basedir}\lib\janino.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>lib</groupId>
			<artifactId>javac</artifactId>
			<scope>system</scope>
			<version>0.0</version>
			<systemPath>${basedir}\lib\javac.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>lib</groupId>
			<artifactId>jcommon</artifactId>
			<scope>system</scope>
			<version>1.0.9</version>
			<systemPath>${basedir}\lib\jcommon-1.0.9.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>lib</groupId>
			<artifactId>jfreechart</artifactId>
			<scope>system</scope>
			<version>1.0.5</version>
			<systemPath>${basedir}\lib\jfreechart-1.0.5.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>lib</groupId>
			<artifactId>jl</artifactId>
			<scope>system</scope>
			<version>1.0</version>
			<systemPath>${basedir}\lib\jl1.0.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>lib</groupId>
			<artifactId>json-simple</artifactId>
			<scope>system</scope>
			<version>1.1.1</version>
			<systemPath>${basedir}\lib\json-simple-1.1.1.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>lib</groupId>
			<artifactId>sunflow</artifactId>
			<scope>system</scope>
			<version>0.0</version>
			<systemPath>${basedir}\lib\sunflow.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>lib</groupId>
			<artifactId>Tidy</artifactId>
			<scope>system</scope>
			<version>0.0</version>
			<systemPath>${basedir}\lib\Tidy.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>lib</groupId>
			<artifactId>xom</artifactId>
			<scope>system</scope>
			<version>1.1</version>
			<systemPath>${basedir}\lib\xom-1.1.jar</systemPath>
		</dependency>
	</dependencies>
</project>
